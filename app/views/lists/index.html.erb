<h1>List Index View</h1>

<ul>
  <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %>
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a list", new_list_path %>
